{
  "name": "Compass Ant",
  "description": "Extract some useful information from jira and github",
  "version": "0.2",
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background/menu.js",
      "background/util.js"
    ]
  },
  "icons": {
    "16": "art/pikmin.png",
    "32": "art/pikmin@2x.png",
    "48": "art/pikmin@3x.png",
    "128": "art/pikmin@full.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.github.com/UrbanCompass/uc-frontend/pull/*"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "manifest_version": 2
}
